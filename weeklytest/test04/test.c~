#include <stdio.h>

int main(void) {
    int size;
    int i;
    int j;
    int k;
    //int z;
    int a;
    int i_1;
    int j_1;

    printf("Please enter a size: ");
    scanf("%d", &size);
    for (i = (size/2 -1); i >= 1; i--) {
        for (j = 1; j <= i; j++) {
            printf(" -");
            }
        printf("\n");
        }
    
    

    return 0;
    }
       
            
